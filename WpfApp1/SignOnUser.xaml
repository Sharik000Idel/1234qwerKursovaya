<Window x:Class="WpfApp1.SignOnUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="SignOnUser" Height="450" Width="800">
    <Grid>
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Label Content="Login"/>
            <TextBox x:Name="LoginBox" Margin="0 0 0 10"/>
            <Label Content="Password"/>
            <TextBox x:Name="PasswordName" Margin="0 0 0 10"/>
            <Button Width="120" Height="30" x:Name="SignOnButton" Content="Sign On" Click="SignOnButton_Click" Margin="0 10 0 0"/>
        </WrapPanel>
    </Grid>
</Window>
